<div class="col-md-12">
  <div class="discussion-info info-editable">
    <h2><%= discussion.escape("title") %></h2>
    <h3>
      <%= discussion.get("body") %>
    </h3>
  </div>

  <a href="#projects/<%= project.id %>/discussions">
      Back to discussions
  </a>

  <section class='comments row'></section>

  <div class="comment-create">
    <button type="button" class='new-comment btn btn-primary'>
      Post a new comment
    </button>
  </div>
</div>
